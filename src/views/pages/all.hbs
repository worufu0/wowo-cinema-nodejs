{{#if movies.rows}}
    <section class="main-page-header speaker-banner bg_img" data-background="/images/banner/banner02.jpg">
        <div class="container">
            <div class="speaker-banner-content">
                <h2 class="title">phim</h2>
                <ul class="breadcrumb">
                    <li>
                        <a href="/">trang chủ</a>
                    </li>
                    <li>phim</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="movie-section padding-top padding-bottom">
        <div class="container">
            <div class="row flex-wrap-reverse justify-content-center">
                <div class="col-lg-12 mb-50 mb-lg-0">
                    <div class="filter-tab tab">
                        <div class="tab-area">
                            <div class="section-header-1">
                                <h2 class="title">Tất cả phim</h2>
                            </div>
                            <div class="tab-item active">
                                <div class="row mb-10 justify-content-center">
                                    {{#each movies.rows}}
                                        <div class="col-sm-6 col-lg-3">
                                            <div class="movie-grid">
                                                <div class="movie-thumb c-thumb">
                                                    <a href="/movie/{{this.unsignedName}}">
                                                        <img src="/images/movie/poster/poster-{{this.image}}.jpg"
                                                            alt="poster">
                                                    </a>
                                                </div>
                                                <div class="movie-content">
                                                    <h5 class="title m-0">
                                                        <a href="/movie/{{this.unsignedName}}">{{this.name}}</a>
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                                <div class="pagination-area text-center">
                                    {{#unless pagingInfo.min}}
                                        <a href="/movie?page={{minus pagingInfo.currentPage 1}}"><i
                                                class="fas fa-angle-double-left"></i><span>trước</span></a>
                                    {{/unless}}
                                    {{#each pagingInfo.pageNumberArray}}
                                        <a href="/movie?page={{this.value}}" class="{{this.active}}">{{this.value}}</a>
                                    {{/each}}
                                    {{#unless pagingInfo.max}}
                                        <a href="/movie?page={{add pagingInfo.currentPage 1}}"><span>sau</span><i
                                                class="fas fa-angle-double-right"></i></a>
                                    {{/unless}}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{else}}
    <section class="details-banner hero-area bg_img seat-plan-banner" data-background="/images/banner/banner04.jpg">
        <div class="col-lg-12">
            <p style="text-align: center;">
                không có dữ liệu.
            </p>
        </div>
    </section>
{{/if}}