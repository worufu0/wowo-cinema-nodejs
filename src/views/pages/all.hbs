<section class="movie-section padding-top padding-bottom">
    <div class="container">
        <div class="row flex-wrap-reverse justify-content-center padding-top">
            <div class="col-lg-12 mb-50 mb-lg-0">
                <div class="filter-tab tab">
                    <div class="tab-area">
                        {{#if movies.rows}}
                            <div class="section-header-1">
                                <h2 class="title">Tất cả phim</h2>
                            </div>
                            <div class="tab-item active">
                                <div class="row mb-10 justify-content-center">
                                    {{#each movies.rows}}
                                        <div class="col-sm-6 col-lg-3">
                                            <div class="movie-grid">
                                                <div class="movie-thumb c-thumb">
                                                    <a href="/movie/{{this.unsignedName}}">
                                                        <img src="/images/movie/poster/poster-{{this.image}}.jpg"
                                                            alt="poster">
                                                    </a>
                                                </div>
                                                <div class="movie-content bg-one">
                                                    <h5 class="title m-0">
                                                        <a href="/movie/{{this.unsignedName}}">{{this.name}}</a>
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                                <div class="pagination-area text-center">
                                    {{#unless min}}
                                        <a href="/movie/all?page={{minus currentPage 1}}"><i
                                                class="fas fa-angle-double-left"></i><span>trước</span></a>
                                    {{/unless}}
                                    {{#each pageNumberArray}}
                                        <a href="/movie/all?page={{this.value}}"
                                            class="{{this.active}}">{{this.value}}</a>
                                    {{/each}}
                                    {{#unless max}}
                                        <a href="/movie/all?page={{add currentPage 1}}"><span>sau</span><i
                                                class="fas fa-angle-double-right"></i></a>
                                    {{/unless}}
                                </div>
                            </div>
                        {{else}}
                            <div class="col-lg-12">
                                <p style="text-align: center;">không có dữ liệu.</p>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>