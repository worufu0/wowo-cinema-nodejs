{{#if showTime}}
    <section class="details-banner hero-area bg_img seat-plan-banner"
        data-background="/images/movie/banner/banner-{{showTime.Movie.image}}.jpg">
        <div class="container">
            <div class="details-banner-wrapper">
                <div class="details-banner-content style-two">
                    <div id="show-time" class="d-none" data-id="{{showTime.id}}" data-price="{{showTime.price}}"></div>
                    <h3 class="title">
                        {{showTime.Movie.name}}
                    </h3>
                </div>
            </div>
        </div>
    </section>

    <section class="page-title bg-one">
        <div class="container">
            <div class="page-title-area">
                <div class="item md-order-1">
                    <a href="{{back}}" class="custom-button back-button">
                        <i class="flaticon-double-right-arrows-angles"></i>quay lại
                    </a>
                </div>
                <div class="item date-item">
                    <span class="date">{{showTime.Room.Cinema.name}} | {{showTime.Room.name}} |
                        {{showTime.Room.RoomType.name}}</span>
                </div>
                <div class="item">
                    <h5 class="title">{{formatDateTime showTime.time 'vi' 'LT'}}</h5>
                    <p style="margin-left: -16px; text-align: right">{{formatDateTime showTime.time 'vi' 'Do-MM-YYYY'}}
                    </p>
                </div>
            </div>
        </div>
    </section>

    <div class="seat-plan-section padding-bottom padding-top">
        <div class="container">
            <div class="screen-area">
                <h4 class="screen">màn hình</h4>
                <div class="screen-thumb">
                    <img src="/images/booking/screen-thumb.png" alt="movie" />
                </div>
                <div class="screen-wrapper">
                    <ul class="seat-area">
                        {{#each seats}}
                            <li class="seat-line">
                                <span>{{this.[0].seatName.[0]}}</span>
                                <ul class="seat--area">
                                    <li class="front-seat">
                                        <ul>
                                            {{#each this}}
                                                {{#if this.booked}}
                                                    <li class="single-seat">
                                                        <img src="/images/booking/seat01.png" alt="{{this.seatName}}" />
                                                    </li>
                                                {{else}}
                                                    <li class="single-seat seat-free" book="0"
                                                        data-name="{{this.seatName}}">
                                                        <img src=" /images/booking/seat01-free.png"
                                                            alt="{{this.seatName}}" />
                                                        <span class="sit-num">{{this.seatName}}</span>
                                                    </li>
                                                {{/if}}
                                            {{/each}}
                                        </ul>
                                    </li>
                                </ul>
                                <span>{{this.[0].seatName.[0]}}</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            <div class="proceed-book bg_img" data-background="/images/booking/movie-bg-proceed.jpg">
                <div class="proceed-to-book">
                    <div class="book-item">
                        <span>các ghế đã chọn</span>
                        <h3 id="booked-seats" class="title">chưa chọn</h3>
                    </div>
                    <div class="book-item">
                        <span>tổng cộng</span>
                        <h3 id="total" class="title">0 ₫</h3>
                    </div>
                    <div class="book-item">
                        <a id="checkout" class="custom-button">thanh toán</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <section class="details-banner hero-area bg_img seat-plan-banner" data-background="/images/banner/banner04.jpg">
        <div class="col-lg-12">
            <p style="text-align: center;">
                không có dữ liệu.
            </p>
        </div>
    </section>
{{/if}}