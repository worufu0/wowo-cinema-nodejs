<section class="details-banner bg_img" data-background="/images/movie/banner/banner-{{movie.dataValues.image}}.jpg">
    <div class="container">
        <div class="details-banner-wrapper">
            <div class="details-banner-thumb">
                <img src="/images/movie/poster/poster-{{movie.dataValues.image}}.jpg" alt="poster" />
                <a href="https://www.youtube.com/watch?v={{movie.dataValues.video}}" class="video-popup">
                    <img src="/images/movie/icon/video-button.png" alt="play" />
                </a>
            </div>
            <div class="details-banner-content offset-lg-3">
                <h3 class="title">{{movie.dataValues.name}}</h3>
                <a class="button">{{movie.dataValues.category}}</a>
                <div class="social-and-duration">
                    <div class="duration-area">
                        <div class="item">
                            <i class="fas fa-calendar-alt"></i><span>{{movie.dataValues.openingDay}}</span>
                        </div>
                        <div class="item">
                            <i class="far fa-clock"></i><span>{{movie.dataValues.time}} phút</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="book-section bg-one">
    <div class="container">
        <div class="book-wrapper offset-lg-3">
            <div class="left-side">
                <div class="item">
                    <div class="item-header">
                        <div class="thumb">
                            <img src="/images/movie/icon/director.png" alt="director" />
                        </div>
                        <p>
                            <b>Đạo diễn:</b> {{movie.dataValues.director}}
                        </p>
                    </div>
                </div>
                <div class="item">
                    <div class="item-header">
                        <div class="thumb">
                            <img src="/images/movie/icon/country.png" alt="country" />
                        </div>
                        <p><b>Quốc gia:</b> {{movie.dataValues.country}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="movie-details-section padding-top padding-bottom">
    <div class="container">
        <div class="row justify-content-center flex-wrap-reverse mb--50">
            <div class="col-lg-12 mb-50">
                <div class="movie-details">
                    {{#if images}}
                        <h3 class="title">hình ảnh</h3>
                        <div class="details-photos owl-carousel">
                            {{#each images}}
                                <div class="thumb">
                                    <a href="/images/movie/image/movie-{{this.dataValues.name}}.jpg" class="img-pop">
                                        <img src="/images/movie/image/movie-{{this.dataValues.name}}.jpg" alt="image" />
                                    </a>
                                </div>
                            {{/each}}
                        </div>
                    {{/if}}
                    <div class="tab summery-review">
                        <ul class="tab-menu">
                            <li class="active">suất chiếu</li>
                            <li>nội dung phim</li>
                        </ul>
                        <div class="tab-area">
                            <div class="tab-item active">
                                <div class="item">
                                    <div class="row">
                                        <form class="col-lg-12 ticket-search-form mb-4 justify-content-start">
                                            <div class="form-group">
                                                <div class="thumb">
                                                    <img src="/images/ticket/city.png" alt="ticket" />
                                                </div>
                                                <span class="type">cụm rạp</span>
                                                <select class="select-bar cinemas" name="cinema">
                                                    {{#each cinemas}}
                                                        <option value="{{this.dataValues.unsignedName}}">
                                                            {{this.dataValues.name}}
                                                        </option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="ticket-plan-section">
                                        <div class="row justify-content-center">
                                            <div class="col-lg-12 mb-5 mb-lg-0">
                                                <ul class="seat-plan-wrapper bg-five">
                                                    <li>
                                                        <div class="movie-name">
                                                            <div class="icons">
                                                                <i class="fas fa-film"></i>
                                                                <i class="">2D</i>
                                                            </div>
                                                            <a href="#0" class="name">Genesis Cinema</a>
                                                        </div>
                                                        <div class="movie-schedule">
                                                            <div class="item">
                                                                09:40
                                                            </div>
                                                            <div class="item">
                                                                13:45
                                                            </div>
                                                            <div class="item">
                                                                15:45
                                                            </div>
                                                            <div class="item">
                                                                19:50
                                                            </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-item">
                                <div class="item">
                                    <h5 class="sub-title">{{movie.dataValues.name}}</h5>
                                    <p>{{movie.dataValues.description}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>