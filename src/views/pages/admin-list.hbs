<div class="breadcrumbbar">
    <div class="row align-items-center">
        <div class="col-md-8 col-lg-8">
            <h4 class="page-title">{{pathTitle.[1]}}</h4>
            <div class="breadcrumb-list">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">{{pathTitle.[0]}}</li>
                    <li class="breadcrumb-item active" aria-current="page">
                        {{pathTitle.[1]}}
                    </li>
                </ol>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class="widgetbar">
                <button id="add-button" class="btn btn-primary-rgba" data-toggle="modal" data-target="#modalAdd">
                    <i class="feather icon-plus mr-2"></i>Thêm
                    mới
                </button>
            </div>
        </div>
    </div>
</div>
<div class="contentbar">
    <div class="row">
        <div class="col-lg-12">
            <div class="card m-b-30">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-6">
                            <h5 class="card-title mb-0">
                                Tất cả {{pathTitle.[1]}}
                            </h5>
                        </div>
                    </div>
                </div>
                {{#ifEqual item.type 0}}
                    <div class="card-body">
                        {{#if ../item.list}}
                            <div class="table-responsive">
                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th>mã</th>
                                            <th>poster</th>
                                            <th>tên phim</th>
                                            <th>thể loại</th>
                                            <th>quốc gia</th>
                                            <th>đạo diễn</th>
                                            <th>thời lượng</th>
                                            <th>ngày công chiếu</th>
                                            <th>vé đã bán</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each ../item.list}}
                                            <tr>
                                                <td scope="row">{{this.id}}</td>
                                                <td>
                                                    <img src="/images/movie/poster/poster-{{this.image}}.jpg"
                                                        class="img-fluid" width="35" alt="poster" />
                                                </td>
                                                <td>{{this.name}}</td>
                                                <td>{{this.category}}</td>
                                                <td>{{this.country}}</td>
                                                <td>{{this.director}}</td>
                                                <td>{{this.time}} phút</td>
                                                <td>{{this.openingDay}}</td>
                                                <td>{{this.sold}}</td>
                                                <td>
                                                    <div class="button-list">
                                                        <a href="#" class="
                                                                    btn
                                                                    btn-success-rgba
                                                                "><i class="
                                                                        feather
                                                                        icon-edit-2
                                                                    "></i></a>
                                                        <form method="POST" action="?_method=delete" class="deleteForm">
                                                            <input type="hidden" name="id" value="{{this.id}}">
                                                            <button type="submit" class="
                                                                    btn
                                                                    btn-danger-rgba deleteBtn
                                                                "><i class="
                                                                        feather
                                                                        icon-trash
                                                                    "></i></button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        {{else}}
                            <span>Chưa có dữ liệu</span>
                        {{/if}}
                        <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog"
                            aria-labelledby="modalAddTitle" style="display: none;" aria-hidden="true">
                            <div class="modal-dialog  slideInUp  animated" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="modalAddTitle">Thêm mới {{../pathTitle.[1]}}
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                    <form autocomplete="off" method="POST" class="form-validate addForm"
                                        enctype="multipart/form-data">
                                        <div class="modal-body">
                                            <div class="form-group mb-30">
                                                <label for="">Tên phim</label>
                                                <input type="text" class="form-control" name="inputName" id="inputName"
                                                    maxlength="128" placeholder="Nhập tên phim">
                                            </div>
                                            <div class="form-group mb-30">
                                                <label for="">Đường dẫn (không dấu)</label>
                                                <input type="text" class="form-control" name="inputUnsignedName"
                                                    id="inputUnsignedName" maxlength="256"
                                                    placeholder="Nhập đường dẫn của phim">
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-9">
                                                    <div class="form-group mb-30">
                                                        <label for="">Poster phim</label>
                                                        <input type="file" class="form-control-file" id="inputPoster"
                                                            name="inputPoster" accept="image/jpeg">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3">
                                                    <div class="form-group mb-30">
                                                        <img id="previewPoster" style="width: 75%">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-9">
                                                    <div class="form-group mb-30">
                                                        <label for="">Banner phim</label>
                                                        <input type="file" class="form-control-file" id="inputBanner"
                                                            name="inputBanner" accept="image/jpeg">
                                                    </div>
                                                </div>
                                                <div class="col-lg-3">
                                                    <div class="form-group mb-30">
                                                        <img id="previewBanner" style="width: 75%">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-7">
                                                    <div class="form-group mb-30">
                                                        <label for="">Thể loại</label>
                                                        <input type="text" class="form-control" name="inputCategory"
                                                            maxlength="64" id="inputCategory"
                                                            placeholder="Nhập thể loại phim">
                                                    </div>
                                                </div>
                                                <div class="col-lg-5">
                                                    <div class="form-group mb-30">
                                                        <label for="">Thời lượng (phút)</label>
                                                        <input type="number" class="form-control" name="inputTimeLong"
                                                            id="inputTimeLong" placeholder="Nhập thời lượng">
                                                    </div>
                                                </div>
