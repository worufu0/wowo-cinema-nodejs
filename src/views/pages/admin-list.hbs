                                                <input type="file" class="form-control-file" id="inputImages"
                                                    name="inputImages" accept="image/jpeg" multiple>
                                            </div>
                                            <div id="previewImages" class="row"></div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy
                                                bỏ</button>
                                            <button type="submit" class="btn btn-primary addBtn">Thêm</button>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/ifEqual}}
