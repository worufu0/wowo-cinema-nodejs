<section class="account-section bg_img" data-background="/images/account/account-bg.jpg">
    <div class="container">
        <div class="padding-top padding-bottom">
            <div class="account-area">
                <div class="section-header-3">
                    <span class="cate"><a href="/">{{appName}}</a> </span>
                    <h2 class="title">đăng ký</h2>
                </div>
                <form id="register-form" class="account-form" method="POST">
                    <div class="form-group">
                        <label class="error" for="email">{{regErr}}</label>
                        <label for="email">email <span>*</span></label>
                        <input type="text" placeholder="Nhập địa chỉ email" id="email" name="email" />
                    </div>
                    <div class="form-group">
                        <label for="pass1">mật khẩu <span>*</span></label>
                        <input type="password" placeholder="Nhập mật khẩu" id="pass1" name="pass1" />
                    </div>
                    <div class="form-group">
                        <label for="pass2">xác nhận mật khẩu <span>*</span></label>
                        <input type="password" placeholder="Nhập lại mật khẩu" id="pass2" name="pass2" />
                    </div>
                    <div class="form-group checkgroup">
                        <input type="checkbox" id="agree" name="agree" checked disabled />
                        <label for="agree">tôi đồng ý với
                            <a href="#">các điều khoản và chính sách bảo mật</a>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="đăng ký" />
                    </div>
                </form>
                <div class="option register">
                    bạn đã có tài khoản?
                    <a href="/login">đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</section>