<section class="account-section bg_img" data-background="/images/account/account-bg.jpg">
    <div class="container">
        <div class="padding-top padding-bottom">
            <div class="account-area center">
                <div class="section-header-3">
                    <span class="cate"><a href="/">{{appName}}</a> </span>
                    <h2 class="title">quên mật khẩu</h2>
                </div>
                <form id="recovery-form" class="account-form" method="POST">
                    <div class="form-group">
                        <label class="error">{{recErr}}</label>
                        <input type="text" placeholder="Nhập địa chỉ email" id="email" class="text-center"
                            name="email" />
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="khôi phục" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>